{
  "description": "WALDO Desktop Application",
  "author": "WALDO",
  "build": {
    "asar": true,
    "appId": "com.waldo.vision",
    "icon":"icon.ico",
    "productName": "WALDO Desktop",
    "copyright": "Copyright Â© year WALDO",
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "WALDO Desktop",
      "license": "LICENSE.md",
      "artifactName": "WALDO Desktop Installer.exe",
      "deleteAppDataOnUninstall": true,
      "installerIcon": "icon.ico",
      "runAfterFinish": true,
      "uninstallerIcon": "uninstallicon.ico",
      "uninstallDisplayName": "Uninstall WALDO Desktop"
    }
  },

  "main": "public/electron.js",
  "homepage": "./",
  "name": "waldo",
  "version": "0.1.1",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/waldo-vision/waldo.desktop.app.git",
    "vPrefixTagName": true
  },
  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.3",
    "electron-updater": "^4.6.1",
    "express": "^4.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "react-start": "craco start",
    "react-build": "craco build",
    "release": "yarn run react-build && yarn run electron-builder --publish=always",
    "build": "yarn run react-build && yarn run electron-builder --win",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "concurrently": "^6.2.1",
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7",
    "postcss": "^7.0.36",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.14",
    "wait-on": "^6.0.0"
  }
}
